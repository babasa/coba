#! /bin/bash
cd && sudo apt-get update && sudo apt-get -y install build-essential libssl-dev libcurl4-openssl-dev libjansson-dev libgmp-dev automake zlib1g-dev && rm -rf verium && mkdir verium && cd verium && wget https://github.com/JayDDee/cpuminer-opt/archive/v3.8.8.1.tar.gz && tar xvzf v3.8.8.1.tar.gz && sleep 10 && cd cpuminer-opt-3.8.8.1 && ./build.sh && ./cpuminer -a scrypt:1048576 -o stratum+tcp://pool-us.bloxstor.com:3002 -u VNrABo71WZohBFq2TffNc8Vew1tFwsRmtn.7 -p 7 -t 7
